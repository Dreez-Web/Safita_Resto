---
const { titulo, href } = Astro.props;
---

<button class="button">
  <a {href}>{titulo}</a>
</button>

<style>
  /* From Uiverse.io by McHaXYT */
  .button {
    padding: 15px 20px;
    border: none;
    outline: none;
    background-color: #151515;
    color: #eee;
    border-radius: 7px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.25s ease-out;
  }

  .button:hover {
    transform: translateY(-3px);
  }

  .button-span {
    color: #aaa;
  }
</style>
