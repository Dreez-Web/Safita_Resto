---
const { nombre, descripcion, precio } = Astro.props;
---

<div class="flex flex-col items-center justify-center p-5">
  <div class="flex flex-row items-center justify-center">
    <h2 class="font-bold text-2xl">{nombre}</h2>
    <p class="m-2 text-center">-----------------------</p>
    <p class="font-bold text-lg">{precio}</p>
  </div>
  <div class="items-center justify-center p-5">
    <p class="font-semibold text-lg">{descripcion}</p>
    <p class="sm:hidden">-------</p>
  </div>
</div>
